<%- include('../partials/header') %>

  <form action="/businesses/<%= business._id %>/favs" method="POST">
  <button> ❤️ </button>
  </form>
  <section id="show-page">
    <div>Name: </div>
    <div>
      <%= business.name %>
    </div>
    <div>Address: </div>
    <div>
      <%= business.address %>
    </div>
    <div>Website: </div>mvp
    <div>
      <%= business.link %>
    </div>
    <div>Phone: </div>
    <div>
      <%= business.phone %>
    </div>
    <div>Email: </div>
    <div>
      <%= business.email %>
    </div>
    <div>Services: </div>
    <div>
      <%= business.tag %>
    </div>
  </section>
  <% if (user._id.equals(business.user)) { %>
    <form action="/businesses/<%= business._id %>/edit">
      <button type="submit">Edit Business</button>
    </form>
    <% }%>
    <br><br>
      <h2>Reviews</h2>
      <div id="reviews-containers">
        <% if (user) { %>
          <form id="add-review-form" method="POST" action="/businesses/<%= business._id %>/reviews">
            <label>Rating:</label>
            <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <label>Review:</label>
            <textarea name="content"></textarea>
            <input type="submit" value="Add Review">
          </form>
          <% } %>
            <br>
            <br>
            <div id="review-list">
              <% if (business.reviews.length) { %>
                <table>
                  <thead>
                    <tr>
                      <th>User</th>
                      <th>Date</th>
                      <th>Review</th>
                      <th>Rating</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% let total=0 %>
                      <% business.reviews.forEach(function(r) { %>
                        <% total +=r.rating %>
                          <tr>
                            <td class="review-user"><img src="<%= r.userAvatar %>" alt="avatar">
                              <%= r.userName %>
                            </td>
                            <td>
                              <%= r.createdAt.toLocaleDateString() %>
                            </td>
                            <td>
                              <%= r.content %>
                            </td>
                            <td>
                              <%= r.rating %>
                            </td>
                            <td>
                              <% if (user?._id.equals(r.user)) { %>
                                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                  <button type="submit">X</button>
                                </form>
                                <% } %>
                            </td>
                          </tr>
                          <% }); %>
                            <tr>
                              <td colspan="3"></td>
                              <td><strong>
                                  <%= (total / business.reviews.length).toFixed(1) %>
                                </strong></td>
                            </tr>
                  </tbody>
                </table>
                <% } else { %>
                  <h5>No Reviews Yet</h5>
                  <% } %>
            </div>
            <br>
            <br>
            <% if (user._id.equals(business.user)) { %>
              <form action="/businesses/<%= business._id %>?_method=DELETE" method="POST">
                <button type="submit">Delete the Business</button>
              </form>
              <% }%>
      </div>
      <%- include('../partials/footer') %>